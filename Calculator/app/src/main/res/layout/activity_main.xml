<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ambar.calculator.MainActivity">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/result"/>

    <Button
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        style="@style/Widget.AppCompat.Button"
        android:layout_below="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="4"
        android:layout_width="80dp" />

    <Button
        android:text="7"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/button7"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="80dp" />

    <Button
        android:text="2"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        style="@style/Widget.AppCompat.Button"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignLeft="@+id/button13"
        android:layout_alignStart="@+id/button13"
        android:layout_width="80dp" />

    <Button
        android:text="C"
        android:layout_height="wrap_content"
        android:id="@+id/buttonC"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_above="@+id/button1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="80dp" />

    <Button
        android:text="+/-"
        android:layout_height="wrap_content"
        android:id="@+id/button13"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_above="@+id/button2"
        android:layout_toRightOf="@+id/buttonC"
        android:layout_toEndOf="@+id/buttonC"
        android:layout_width="80dp" />

    <Button
        android:text="%"
        android:layout_height="wrap_content"
        android:id="@+id/buttonMod"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="80dp"
        android:layout_alignBaseline="@+id/button13"
        android:layout_alignBottom="@+id/button13"
        android:layout_toRightOf="@+id/button13"
        android:layout_toEndOf="@+id/button13" />

    <Button
        android:text="+"
        android:layout_height="wrap_content"
        android:id="@+id/buttonAdd"
        android:visibility="visible"
        android:fitsSystemWindows="true"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="80dp"
        android:layout_above="@+id/buttonSubs"
        android:layout_toRightOf="@+id/buttonMod"
        android:layout_toEndOf="@+id/buttonMod" />

    <Button
        android:text="1"
        android:layout_height="wrap_content"
        android:id="@+id/button1"
        style="@style/Widget.AppCompat.Button"
        android:layout_marginBottom="177dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="80dp" />

    <Button
        android:text="3"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        style="@style/Widget.AppCompat.Button"
        android:layout_below="@+id/buttonMod"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2"
        android:layout_width="80dp" />

    <Button
        android:text="-"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSubs"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="80dp"
        android:layout_alignBaseline="@+id/button3"
        android:layout_alignBottom="@+id/button3"
        android:layout_toRightOf="@+id/buttonMod"
        android:layout_toEndOf="@+id/buttonMod" />

    <Button
        android:text="5"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        style="@style/Widget.AppCompat.Button"
        android:layout_below="@+id/button2"
        android:layout_toRightOf="@+id/button4"
        android:layout_toEndOf="@+id/button4"
        android:layout_width="80dp" />

    <Button
        android:text="8"
        android:layout_height="wrap_content"
        android:id="@+id/button8"
        style="@style/Widget.AppCompat.Button"
        android:layout_below="@+id/button5"
        android:layout_toRightOf="@+id/button4"
        android:layout_toEndOf="@+id/button4"
        android:layout_width="80dp" />

    <Button
        android:text="9"
        android:layout_height="wrap_content"
        android:id="@+id/button9"
        style="@style/Widget.AppCompat.Button"
        android:layout_alignBaseline="@+id/button8"
        android:layout_alignBottom="@+id/button8"
        android:layout_toRightOf="@+id/button8"
        android:layout_toEndOf="@+id/button8"
        android:layout_width="80dp" />

    <Button
        android:text="6"
        android:layout_height="wrap_content"
        android:id="@+id/button6"
        style="@style/Widget.AppCompat.Button"
        android:layout_below="@+id/button3"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2"
        android:layout_width="80dp" />

    <Button
        android:text="0"
        android:layout_height="wrap_content"
        android:id="@+id/button10"
        style="@style/Widget.AppCompat.Button"
        android:layout_below="@+id/button7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="80dp" />

    <Button
        android:text="="
        android:layout_height="wrap_content"
        android:id="@+id/buttonEquals"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_below="@+id/buttonDiv"
        android:layout_toRightOf="@+id/button11"
        android:layout_toEndOf="@+id/button11"
        android:layout_width="160dp" />

    <Button
        android:text="*"
        android:layout_height="wrap_content"
        android:id="@+id/buttonMul"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_below="@+id/buttonSubs"
        android:layout_toRightOf="@+id/button3"
        android:layout_toEndOf="@+id/button3"
        android:layout_width="80dp" />

    <Button
        android:text="."
        android:layout_height="wrap_content"
        android:id="@+id/button11"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="80dp"
        android:layout_below="@+id/button8"
        android:layout_toRightOf="@+id/button10"
        android:layout_toEndOf="@+id/button10" />

    <Button
        android:text="/"
        android:layout_height="wrap_content"
        android:id="@+id/buttonDiv"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="80dp"
        android:layout_alignBaseline="@+id/button9"
        android:layout_alignBottom="@+id/button9"
        android:layout_toRightOf="@+id/button9"
        android:layout_toEndOf="@+id/button9" />


</RelativeLayout>
